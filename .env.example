# GitHub Configuration
# Get token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, admin:org (for Projects)
GITHUB_TOKEN=ghp_your_github_token_here

# Repository Information
# Format: owner/repo (e.g., YourUsername/my-project)
REPOSITORY=PLark-droid/Cl2Larkinfo

# Anthropic API Key (optional for local development)
# Get key at: https://console.anthropic.com/
# Required for running agents locally
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Device Identifier (for logging)
DEVICE_IDENTIFIER=MyComputer

# Agent Configuration
LOG_DIRECTORY=.ai/logs
REPORT_DIRECTORY=.ai/parallel-reports
DEFAULT_CONCURRENCY=2

# Development Options
USE_TASK_TOOL=false
USE_WORKTREE=false

# ===========================================
# Lark Permission Notification
# ===========================================

# Webhook Server Configuration
# Base URL of the webhook server (for local dev or Vercel deployment)
LARK_WEBHOOK_SERVER=http://localhost:3000
# LARK_WEBHOOK_SERVER=https://your-app.vercel.app

# API Key for authenticating requests from the hook script
# Generate a secure random string for production
LARK_API_KEY=your-secure-api-key-here

# Request timeout in milliseconds (default: 300000 = 5 minutes)
LARK_TIMEOUT=300000

# Lark Bot Configuration
# Get these from https://open.larksuite.com/app
LARK_APP_ID=cli_xxxxxxxxxxxxxxxx
LARK_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Verification token for validating Lark callbacks
LARK_VERIFICATION_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Chat ID to send notifications to (group chat or direct message)
# Find this in the chat URL or via Lark API
LARK_CHAT_ID=oc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
